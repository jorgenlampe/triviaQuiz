<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Number of questions" >

        <EditTextPreference
            app:key="amount"
            app:title="Number of questions"/>



    </PreferenceCategory>

    <PreferenceCategory android:title="Difficulty">

        <CheckBoxPreference

        app:title="Any difficulty"
            app:key="diffAny"
            app:defaultValue="true">

        </CheckBoxPreference>
        <CheckBoxPreference
            app:title="Easy"
            app:key="diffEasy"
            app:defaultValue="false">
        </CheckBoxPreference>
        <CheckBoxPreference
            app:title="Medium"
            app:key="diffMedium"
            app:defaultValue="false">
        </CheckBoxPreference>
        <CheckBoxPreference
            app:title="Hard"
            app:key="diffHard"
            app:defaultValue="false">
        </CheckBoxPreference>

    </PreferenceCategory>

    <PreferenceCategory android:title="Category">

        <ListPreference
            android:title="Pick Category"
            android:key="category"
            android:defaultValue="9"
            android:entries="@array/categories"
            android:entryValues="@array/categoryValues"
            ></ListPreference>


    </PreferenceCategory>

    <PreferenceCategory android:title="Type of questions">
        <CheckBoxPreference
            app:title="Any Type"
            app:key="anyType"
            app:defaultValue="false">
        </CheckBoxPreference>
        <CheckBoxPreference
            app:title="Multiple Choice"
            app:key="multipleChoice"
            app:defaultValue="false">
        </CheckBoxPreference>
        <CheckBoxPreference
            app:title="True / False"
            app:key="trueOrFalse"
            app:defaultValue="false">
        </CheckBoxPreference>


    </PreferenceCategory>

</androidx.preference.PreferenceScreen>